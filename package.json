{
  "name": "jekyll-portfolio",
  "version": "1.0.0",
  "description": "Personal portfolio website built with Jekyll and Tailwind CSS",
  "private": true,
  "scripts": {
    "lint:js": "eslint --ext .js .",
    "lint:css": "stylelint \"**/*.{css,scss}\"",
    "lint:html": "htmlhint \"**/*.{html,htm}\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:md",
    "fix:js": "eslint --ext .js . --fix",
    "fix:css": "stylelint \"**/*.{css,scss}\" --fix",
    "fix:md": "markdownlint \"**/*.md\" --ignore node_modules --fix",
    "fix": "npm run fix:js && npm run fix:css && npm run fix:md"
  },
  "devDependencies": {
    "eslint": "^8.42.0",
    "htmlhint": "^1.1.4",
    "markdownlint-cli": "^0.34.0",
    "stylelint": "^15.7.0",
    "stylelint-config-standard-scss": "^9.0.0"
  },
  "engines": {
    "node": ">=16"
  }
}