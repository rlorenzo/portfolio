{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A professional Jekyll portfolio website",
  "scripts": {
    "build": "npm run build:css && npm run build:js && JEKYLL_ENV=production bundle exec jekyll build",
    "build:css": "postcss ./src/tailwind.css -o ./assets/css/tailwind.css",
    "build:js": "rollup -c",
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "fix": "npm run fix:css && npm run fix:js && npm run fix:md",
    "fix:css": "stylelint 'src/**/*.{css,scss}' 'assets/**/*.{css,scss}' --fix --allow-empty-input",
    "fix:js": "biome check --fix .",
    "fix:md": "markdownlint '**/*.md' --fix",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:md",
    "lint:all": "npm run build && npm run lint && npm run lint:html",
    "lint:css": "stylelint 'src/**/*.{css,scss}' 'assets/**/*.{css,scss}' --allow-empty-input",
    "lint:html": "htmlhint '_site/**/*.html' --ignore '**/playwright-report/**'",
    "lint:js": "biome check .",
    "lint:md": "markdownlint '**/*.md'",
    "prepare": "husky install",
    "serve": "bundle exec jekyll serve",
    "setup": "npm install && bundle install",
    "test": "playwright test",
    "test:update": "playwright test --update-snapshots",
    "watch:css": "npm run build:css -- --watch"
  },
  "keywords": [
    "portfolio",
    "jekyll",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{css,scss}": "stylelint --fix --allow-empty-input",
    "*.js": "biome check --fix",
    "*.md": "markdownlint --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@playwright/test": "^1.58.2",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/postcss": "^4.2.0",
    "concurrently": "^9.1.2",
    "cssnano": "^7.1.2",
    "htmlhint": "^1.1.4",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "rollup": "^4.24.0",
    "stylelint": "^17.3.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-scss": "^7.0.0",
    "tailwindcss": "^4.2.0"
  }
}
