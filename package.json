{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A professional Jekyll portfolio website",
  "scripts": {
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\"",
    "watch:css": "npm run build:css -- --watch",
    "build": "npm run build:css && JEKYLL_ENV=production bundle exec jekyll build",
    "serve": "bundle exec jekyll serve",
    "build:css": "postcss ./src/tailwind.css -o ./assets/css/tailwind.css",
    "setup": "npm install && bundle install",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "lint:js": "eslint './assets/js/**/*.js'",
    "lint:html": "htmlhint '_site/**/*.html'",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:html",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "portfolio",
    "jekyll",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "cssnano": "^6.0.2",
    "eslint": "^8.56.0",
    "htmlhint": "^1.1.4",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.0"
  }
}
